<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/upside_down_background"
    tools:context=".English_locality">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:srcCompat="@drawable/rectangle" />

            <!--EditText
                android:id="@+id/e_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:visibility="gone"
                tools:layout_editor_absoluteX="370dp"
                tools:layout_editor_absoluteY="403dp" /-->

            <!--Spinner
                android:id="@+id/e_city"
                android:layout_width="329dp"
                android:layout_height="58dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_thin"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/e_landmark" /-->

            <EditText
                android:id="@+id/e_address1"
                android:layout_width="330dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/white_address"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Shop Address"
                android:inputType="textMultiLine"
                android:paddingLeft="20dip"
                android:paddingTop="10dip"
                android:paddingRight="20dip"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4" />

            <EditText
                android:id="@+id/e_landmark"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/white_thin"
                android:ems="10"
                android:hint="Landmark"
                android:inputType="textPersonName"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/e_address2" />

            <Button
                android:id="@+id/e3_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:background="@drawable/confirm_button"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/e_landmark" />

            <EditText
                android:id="@+id/e_address2"
                android:layout_width="330dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/white_address"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Home Address(Optional)"
                android:inputType="textMultiLine"
                android:paddingLeft="20dip"
                android:paddingTop="10dip"
                android:paddingRight="20dip"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/e_address1" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="Please Enter Your Complete Address"
                android:textColor="#555555"
                android:textSize="35sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


